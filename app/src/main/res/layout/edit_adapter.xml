<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingTop="16dp" 
    android:background="@android:color/black"
    android:splitMotionEvents="false">

    <CheckBox
        android:id="@+id/record_file_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="30dp"
        android:clickable="false"
        android:focusable="false"
        style="@style/CustomCheckboxTheme"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:splitMotionEvents="false">

        <TextView
            android:id="@+id/record_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/record_file_name"
            android:textSize="20sp"
            android:textDirection="locale" />

        <TextView
            android:id="@+id/record_file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/record_file_name"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/recording_file_list_text"
            android:textSize="20sp"
            android:textDirection="locale" />

        <TextView
            android:id="@+id/record_file_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/record_file_title"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/record_file_name"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/recording_file_list_text"
            android:textSize="20sp"
            android:textDirection="locale" />
    </RelativeLayout>

</LinearLayout>
