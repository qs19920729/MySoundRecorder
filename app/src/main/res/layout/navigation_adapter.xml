<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingTop="16dp" 
    android:splitMotionEvents="false"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/record_file_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:src="@drawable/icon" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="4dp"
        android:splitMotionEvents="false">

        <TextView
            android:id="@+id/record_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/record_file_name"
            android:textDirection="locale"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/record_file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/record_file_name"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/recording_file_list_text"
            android:textDirection="locale"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/record_file_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/record_file_title"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/record_file_name"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/recording_file_list_text"
            android:textDirection="locale"
            android:textSize="20dp"/>
    </RelativeLayout>

</LinearLayout>
